@page
@{
    Layout = "/Views/Shared/_NoLayout.cshtml";
}



@model LoginModel

<div class="login-form">
    <div class="container col-lg-4 col-md-6  col-10">
        <div class="row">

            <h1 class="text-center mb-3 my-5 my-md-0">
                <a href="@Url.Action("Index","Home")" style="text-decoration: none; color: #eb0202;  font-size: 36px;">BloodNET</a>
            </h1>
                <form id="account" method="post" class="needs-validate">
                    <div class=" d-flex flex-column">
                    <div asp-validation-summary="ModelOnly" class="text-danger validate-span" role="alert"></div>
                        <label asp-for="Input.Email">Email</label>
                        <div class="form-floating input-container border-bottom mt-1">
                            <span>
                                <i class="fa fa-regular fa-envelope"></i>
                                <input asp-for="Input.Email"  autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                            </span>
                        </div>
                    <span asp-validation-for="Input.Email" class="text-danger validate-span"></span>
                        <label asp-for="Input.Password" class="mt-4">Password</label>
                        <div class="form-floating input-container border-bottom mt-1">
                            <span>
                                <i class="fa fa-regular fa-lock"></i>
                                <input asp-for="Input.Password" class="" autocomplete="current-password" aria-required="true" placeholder="********" />
                            </span>
                        </div>
                    <span asp-validation-for="Input.Password" class="text-danger validate-span"></span>
                        @* <div class="checkbox d-inline-flex mt-2">
                            <label asp-for="Input.RememberMe">
                                <input class= asp-for="Input.RememberMe" style="width:auto"/>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div> *@

                    <div class="d-flex justify-content-end mt-2">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none" style="color:#eb0202;">Forgot Password?</a>
                    </div>

                        <div class="d-flex justify-content-center">
                       
                            <button type="submit" id="login-submit" style="" class="btn btn-design-fill text-center mt-2">LOGIN</button>
               
                        </div>

                        <div class="d-flex justify-content-center mt-3">
                            <p class="me-1">Do not have an account?</p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none"
                                                                          style="color:#eb0202;">Create One!</a>


                        </div>
                    </div>
                </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section identitycss{
    <style>
        .validate-span {
            font-size: smaller;
        }

        .fa{
            color:var(--clr-dark);
        }
    </style>
}