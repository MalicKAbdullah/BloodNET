<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/animation.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>BloodNET</title>

    <style>
.sidebar {
  margin: 0;
  padding: 0;
  width: 200px;
  
  position: fixed;
  height: 100%;
  overflow: auto;
  display:flex;
  flex-direction:column;
  justify-content:space-around;
}

.sidebar a {
  display: block;
  color: black;
  padding: 13px 32px;
  text-decoration: none;
}

.sidebar a.active {
  background-color: var(--clr-red);
  color: white !important;
}

.sidebar a:hover:not(.active) {
  background-color: var(--clr-red);
  color: white !important;
}

div.content {
  margin-left: 200px;
  padding: 1px 16px;
  
}


@@media screen and (max-width: 700px) {
  .sidebar {
    width: 100%;
    height: auto;
    position: relative;
  }
  .sidebar a {float: left;}
  div.content {margin-left: 0;}
}

h3{
            color: var(--clr-red);
            font-weight: 900;
            padding-left:30px;
    
           
}

@@media screen and (max-width: 400px) {
  .sidebar a {
    text-align: center;
    float: none;
  }
}
    </style>
</head>

<body>
    <header>            <div class="sidebar border-end " >

        <h3 >BloodNET</h3>

        <div>
                <a aria-current="page" href="@Url.Action("Index","Admin")"><i class="fa fa-home me-2"></i>Home</a>

                <a href="@Url.Action("Users","Admin")"><i class="fa fa-users me-2"></i>Users</a>

                <a href="@Url.Action("Requests","Admin")"><i class="fa fa-drupal me-2"></i>Requests</a>

                <a href="@Url.Action("Donations","Admin")"><i class="fa fa-heart me-2"></i>Donations</a>



                <a href="@Url.Action("Contact","Admin")"><i class="fa fa-envelope me-2"></i>Contact</a>


        </div>

        <div class="d-flex align-items-center justify-content-around">
            <form asp-area="Identity" asp-page="/Account/Logout" method="post" onclick="return confirm('Are you sure to Log Out?')">
                <button type="submit" class=" btn text-white p-2" style="background-color:var(--clr-red);margin-left:15px;">Logout</button>
            </form>
                <img src="/img/svg/dark-mode-toggle-icon.png" class="me-2" width="30" id="themeToggle" style="cursor:pointer;margin-left:15px;">
 
        </div>
            </div>
        </nav>

    </header>


    <main role="main">
        @RenderBody()
    </main>

    <script src="~/js/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"></script>
    <script src="~/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("myjs", required: false)
</body>

</html>