
<section class="donor-details">
    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="pb-2 text-start">Donor Details</h2>
                <div class="container donor-container">
                    <form id="donor-form">
                        <fieldset>
                            <legend>Personal Information</legend>
                            <div class="row">
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <label for="d-name">Name</label>
                                    <input type="text" id="d-name" placeholder="Enter Name" required>
                                </div>
                                <div class="col-6 col-sm-6 col-md-4 col-lg-2">
                                    <label for="d-age">Date of Birth</label>
                                    <input type="date" id="d-age" placeholder="Enter Age" required>
                                </div>
                                <div class="col-6 col-sm-6 col-md-4 col-lg-2">
                                    <label for="d-gender">Gender</label>
                                    <select id="d-gender" required>
                                        <option value="" disabled selected>Select Gender</option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <label for="d-weight">Weight</label>
                                    <div class="input-group">
                                        <input type="number" id="d-weight" class="form-control weight-input"
                                               placeholder="Enter Weight" required>
                                        <div class="input-group-append">
                                            <select class="custom-select" id="d-weight-unit">
                                                <option value="kg">kg</option>
                                                <option value="lbs">lbs</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 col-sm-6 col-md-4 col-lg-2">
                                    <label for="d-blood-group">Blood Group</label>
                                    <select id="d-blood-group" required>
                                        <option value="" disabled selected>Select Group</option>
                                        <option value="A+">A+</option>
                                        <option value="A-">A-</option>
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>
                                        <option value="AB+">AB+</option>
                                        <option value="AB-">AB-</option>
                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                    </select>
                                </div>
                            </div>
                        </fieldset>
         
                        <fieldset class="mt-4">
                            <legend>Contact Information</legend>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="d-phone">Phone</label>
                                    <input type="tel" id="d-phone" placeholder="Enter Phone Number" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="d-email">Email</label>
                                    <input type="email" id="d-email" placeholder="Enter Email" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="d-address">Address</label>
                                    <input type="text" id="d-address" placeholder="Enter Address" required>
                                </div>
                                <div class="col-6 col-md-3">
                                    <label for="d-country">Country</label>
                                    <input type="text" id="d-country" placeholder="Enter Country" required>
                                </div>
                                <div class="col-6 col-md-3">
                                    <label for="d-city">City</label>
                                    <input type="text" id="d-city" placeholder="Enter City" required>
                                </div>
                            </div>
                        </fieldset>

                        <fieldset class="mt-4">
                            <legend>Health Information</legend>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="d-medical-history">Medical History</label>
                                    <textarea id="d-medical-history" placeholder="Enter Medical History (Optional)"
                                              style="height: 100px;"></textarea>
                                </div>
                            </div>
                        </fieldset>

                        <div class="row checkbox-content">
                            <div class="col">
                                <label for="d-terms" class="form-check-label">
                                    <input type="checkbox" id="d-terms" required>
                                </label>

                                I verify and hereby agree to comply with the <a href="#">
                                    terms
                                    &
                                    conditions
                                </a>, <a href="#">privacy policy</a>, and all
                                related
                                agreements.
                            </div>

                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <button type="submit" class="btn ">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>