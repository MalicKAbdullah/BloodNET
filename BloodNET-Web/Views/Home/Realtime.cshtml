@model List<BloodRequests>

<section class="realtime-requests">
    <div class="container">
        <h2>Real-time Requests</h2>
        <hr>
        <div class="row mt-3 justify-content-lg-center justify-content-md-start">
            <div class="offset-lg-2 col-md-2 col-5">
                <div class="input-group mb-3">
                    <span class="input-group-text">Blood Group</span>
                    <select class="form-select" id="bloodGroupFilter">
                        <option selected>All</option>
                        <option>A+</option>
                        <option>A-</option>
                        <option>B+</option>
                        <option>B-</option>
                        <option>AB+</option>
                        <option>AB-</option>
                        <option>O+</option>
                        <option>O-</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2 col-5">
                <div class="input-group mb-3">
                    <span class="input-group-text">Location</span>
                    <select class="form-select" id="locationFilter">
                        <option selected>All</option>
                        <option>Location 1</option>
                        <option>Location 2</option>
                        <option>Location 3</option>
                        <option>Location 4</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-2 col-4">
                <button class="btn btn-secondary">Filter</button>
            </div>
        </div>
        <div class="table-responsive-lg">
        <table class="table table-striped table-bordered mt-3">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Blood Group</th>
                    <th scope="col">Location</th>
                    <th scope="col">Date & Time</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(BloodRequests bloodRequests in Model)
                {
                    <tr>
                        <td>@bloodRequests.RecipientName</td>
                        <td>@bloodRequests.BloodGroup</td>
                        <td>@bloodRequests.Location</td>
                        <td>@bloodRequests.DTime</td>
                        <td>
                            <button class="btn btn-success">Accept</button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        </div>
    </div>
</section>