@{
	Layout = "_NoLayout";
}

<div class="login-form">
    <div class="container col-xl-5 col-lg-5 col-md-6  col-10">
        <div class="row">
            <div class=" d-flex flex-column">
                <h2 class="text-center mb-5">
                    <a href="@Url.Action("Index","Home")" style="text-decoration: none; color: #eb0202;  font-size: 36px;">BloodNET</a>
                </h2>
                <label for="">Username</label>
                <div class=" input-container border-bottom mt-1">
                    <span>
                        <i class="fa fa-regular fa-user"></i>
                        <input type="text" placeholder="Enter Username">
                    </span>
                </div>
                <label for="" class="mt-3">Password</label>
                <div class=" input-container border-bottom mt-1">
                    <span>
                        <i class="fa fa-regular fa-lock"></i>
                        <input type="password" placeholder="Enter Password">
                    </span>
                </div>
                <div class="d-flex justify-content-end mt-1">
                    <a href="" class="text-decoration-none" style="color:#eb0202;">Forgot Password?</a>
                </div>
                <a href="" class="btn-design-fill text-center mt-4">LOGIN</a>

                <div class="d-flex justify-content-end mt-3">
                    <p class="me-1">Do not have an account?</p><a href="@Url.Action("Signup","User")" class="text-decoration-none"
                                                                  style="color:#eb0202;">Create One!</a>
                </div>
            </div>
        </div>
    </div>
</div>