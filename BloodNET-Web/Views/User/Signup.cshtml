@{
    Layout = "_NoLayout";
}


<div class="login-form">
    <div class="container col-xl-3 col-lg-4 col-md-6  col-10">
        <div class="row">
            <div class=" d-flex flex-column">
                <h2 class="text-center mb-5">
                    <a href="@Url.Action("Index","Home")" style="text-decoration: none; color: #eb0202; font-size: 36px;">BloodNET</a>
                </h2>



                <div class="col-12">
                    <label for="">Name</label>
                </div>
                <div class="d-flex justify-content-between flex-wrap">
                    <div class="col-12 col-sm-6 pe-3">
                        <div class=" input-container border-bottom mt-1">
                            <span>
                                <i class="fa fa-regular fa-user"></i>
                                <input type="text" placeholder="First Name">
                            </span>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class=" input-container border-bottom mt-1">
                            <span>
                                <i class="fa fa-regular fa-user"></i>
                                <input type="text" placeholder="Last Name">
                            </span>
                        </div>
                    </div>
                </div>


                <label for="" class="mt-3">Username</label>
                <div class=" input-container border-bottom mt-1">
                    <span>
                        <i class="fa fa-regular fa-user"></i>
                        <input type="text" placeholder="Enter Username">
                    </span>
                </div>
                <label for="" class="mt-3">Password</label>
                <div class=" input-container border-bottom mt-1">
                    <span>
                        <i class="fa fa-regular fa-lock"></i>
                        <input type="password" placeholder="Enter Password">
                    </span>
                </div>
                <div class=" input-container border-bottom mt-1">
                    <span>
                        <i class="fa fa-regular fa-lock"></i>
                        <input type="password" placeholder="Confirm Password">
                    </span>
                </div>
                <a href="" class="btn-design-fill text-center mt-4">SIGN UP</a>

                <div class="d-flex justify-content-end mt-3">
                    <p class="me-1">Already have an account?</p><a href="@Url.Action("Login","User")" class="text-decoration-none"
                                                                   style="color:#eb0202;">Login Now!</a>
                </div>
            </div>
        </div>
    </div>
</div>